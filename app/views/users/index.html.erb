<% provide(:title, 'All users') %>
<h1>ユーザー一覧</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>名前</th>
        <th>Email</th>
        <th>生年月日</th>
        <th>性別</th>
        <th>学校名</th>
        <th>面接日時</th>
        <th colspan="1"></th>
      </tr>
    </thead>

    <% @users.each do |user| %>
      <tr>
        <th><div class="text-justify"> <%= user.name %></div></th>
        <th><div class="text-justify"> <%= user.email %></div></th>
        <th><div class="text-justify"> <%= user.birthday %></div></th>
        <th><div class="text-justify"> <%= user.gender %></div></th>
        <th><div class="text-justify"> <%= user.school %></div></th>
        <th><div class="text-justify">
        <% if user.interviews.find_by(status: :approved) %>
          <%= user.interviews.find_by(status: :approved).time %>
        <% else %>
         -
        <% end %>
        </div></th>
        <th><%= link_to "面接一覧", user_interviews_path(user), class: "btn btn-sx btn-primary" %></th>
      </tr>
    <% end %>
