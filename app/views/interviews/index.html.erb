<% provide(:title, 'My interviews') %>
<h1><%=current_user.name %>さんの面接一覧</h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>面接開始時間</th>
        <th>承認状態</th>
        <th colspan="1"></th>
      </tr>
    </thead>


  <% @interviews.each do |interview| %>
  <tbody>
    <tr>
      <td><div class="text-justify"> <%= interview.time %></div></td>
      <td><div class="text-justify"> <%= interview.human_attribute_enum(:status) %></div></td>
      <td><%= link_to "編集", edit_user_interview_path(:user, interview), class: "btn btn-sx btn-primary" %></td>
      <td><%= link_to "削除", user_interview_path(:user, interview), method: :delete, class: "btn btn-sx btn-primary",
                                       data: { confirm: "面接を削除します。よろしいですか？" } %></div></td>
      
    </tr>
  <% end %>
  </table>
  <%= link_to "新規面接作成", new_user_interview_path(:user), class: "btn btn-default btn-primary" %>
